<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rananoyon.rickshawfairsylhet.DistanceBased"
    android:orientation="horizontal">

    <fragment
        android:id="@+id/startLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.google.android.gms.location.places.ui.SupportPlaceAutocompleteFragment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:ems="10"

        />

    <fragment
        android:id="@+id/finishLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.google.android.gms.location.places.ui.SupportPlaceAutocompleteFragment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/startLocation"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:ems="10" />

    <Button
        android:id="@+id/getDirectionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/finishLocation"
        android:layout_alignStart="@+id/finishLocation"
        android:layout_below="@+id/finishLocation"
        android:text="Fair" />


    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/getDirectionsButton"
        android:layout_alignBottom="@+id/getDirectionsButton"
        android:layout_toEndOf="@+id/getDirectionsButton"
        android:layout_toRightOf="@+id/getDirectionsButton"
        android:text="Distance:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/distance_km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/distance"
        android:layout_alignBottom="@+id/distance"
        android:layout_toEndOf="@+id/distance"
        android:layout_toRightOf="@+id/distance"
        android:text=" 0.0 km"
        android:textSize="18sp" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/getDirectionsButton" />

    <TextView
        android:id="@+id/fair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/distance_km"
        android:layout_alignBottom="@+id/distance_km"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/distance_km"
        android:layout_toRightOf="@+id/distance_km"
        android:text="Fair:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/fair_tk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/fair"
        android:layout_alignBottom="@+id/fair"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/fair"
        android:layout_toRightOf="@+id/fair"
        android:text="0.0 Taka"
        android:textSize="18sp" />
</RelativeLayout>
