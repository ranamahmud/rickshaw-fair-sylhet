<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rananoyon.rickshawfairsylhet.DistanceBased"
    android:orientation="horizontal">


    <EditText
        android:id="@+id/addressEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/map"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:hint="Start Address / Marker"
        android:inputType="textPostalAddress" />

    <EditText
        android:id="@+id/finalAddressEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addressEditText"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:hint="Destination Address"
        android:inputType="textPostalAddress" />

    <Button
        android:id="@+id/getDirectionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/finalAddressEditText"
        android:layout_alignStart="@+id/finalAddressEditText"
        android:layout_below="@+id/finalAddressEditText"
        android:layout_marginLeft="96dp"
        android:layout_marginStart="96dp"
        android:text="Calculate" />


    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/finalAddressEditText"
        android:layout_alignStart="@+id/finalAddressEditText"
        android:layout_below="@+id/getDirectionsButton"
        android:text="Distance:" />

    <TextView
        android:id="@+id/distance_km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/distance"
        android:layout_alignBottom="@+id/distance"
        android:layout_toEndOf="@+id/distance"
        android:layout_toRightOf="@+id/distance"
        android:text="0.0 km" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/getDirectionsButton"
        android:layout_marginTop="42dp" />

    <TextView
        android:id="@+id/fair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getDirectionsButton"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_toEndOf="@+id/distance_km"
        android:layout_toRightOf="@+id/distance_km"
        android:text="Fair:" />

    <TextView
        android:id="@+id/fair_tk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getDirectionsButton"
        android:layout_toEndOf="@+id/getDirectionsButton"
        android:layout_toRightOf="@+id/getDirectionsButton"
        android:text="0.0 Taka" />
</RelativeLayout>
